- extends "styles/base.j2.jade"
- from "styles/macros.j2.jade" import metis


-block top
 if metis_url
   = metis(metis_url)


- block before_metadata
  if audio_url
    .object_audio.object_column.left
      .audio_container
        audio(controls="controls")
          source(type="audio/mp3", src=audio_url)
    .document_download
      a(href=audiodownload)= _t("audio_download_link")
  else
    .audio_thumb
      img(src="/thumb2/{{ node.id }}", width="300")

