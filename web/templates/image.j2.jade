- macro imageviewer(image_url, tileurl, no_flash_url)
  html
    head
      title
        = _t('full_view')
      style(type='text/css').
        #div_image{
          overflow: auto;
        }
        body{
          margin: 0px;
          font-family: Verdana, Arial, Helvetica, sans-serif;
          vertical-align: top;
          font-size: 11px;
        }
    body
      a(href=image_url)
        = _t('image_no_flash_link')
      object#theMovie(
        classid='clsid:D27CDB6E-AE6D-11cf-96B8-444553540000'
        codebase='http://download.macromedia.com/pub/shockwave/cabs/flash/swflash.cab#version=6,0,40,0'
        width='100%'
        height='100%'
      )
        param(name='FlashVars', value='zoomifyImagePath={}'.format(tileurl))
        param(name='MENU', value='FALSE')
        param(name='SRC', value='/img/zoom.swf')
        embed(
          FlashVars='zoomifyImagePath={}'.format(tileurl)
          src='/img/zoom.swf'
          menu='false'
          pluginspage='http://www.macromedia.com/shockwave/download/index.cgi?P1_Prod_Version=ShockwaveFlash'
          width='100%'
          height='100%'
          name='theMovie'
        )
